<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/smallMargin"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivSpeakerImage"
                android:layout_width="@dimen/bigSizeCircularImage"
                android:layout_height="@dimen/bigSizeCircularImage"
                android:layout_margin="@dimen/smallMargin"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center_horizontal"
                android:contentDescription="imageSpeaker">

            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/tvSpeakerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:text="Nombre expositor"
                android:textColor="@color/black"
                android:textSize="@dimen/sizeTitle"
                android:textStyle="bold"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="1">

            </TextView>


            <TextView
                android:id="@+id/tvSpeakerJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/smallMargin"
                android:text="Trabajo expositor"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sizetext"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>